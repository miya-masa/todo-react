{
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions" : {
      "sourceType" : "module",
      "ecmaFeatures": {
        "jsx" : true
      }
    },
    "plugins" : [
      "react"
    ],
    "extends": "standard",
    "rules": {
        "indent": 2,
        "linebreak-style": "off" ,
        "space-before-function-paren" : "off",
        "jsx-quotes": [
          2,
          "prefer-double"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-vars": "error"
    }
}
